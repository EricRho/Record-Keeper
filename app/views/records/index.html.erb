<h1>Listing records</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Label</th>
      <th>Genre</th>
      <th>Discs</th>
      <th>Tracks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td id='image_url'><%= image_tag(record.album_art_url, class: 'album_image') %></td>
        <td><%= link_to "#{record.title}", record %></td>
        <td><%= record.artist %></td>
        <td><%= record.year %></td>
        <td><%= record.label %></td>
        <td><%= record.genre %></td>
        <td><%= record.discs %></td>
        <td><%= record.tracks %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

